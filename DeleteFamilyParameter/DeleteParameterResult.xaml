<UserControl x:Class="NewJeans.DeleteParameterResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <Grid Background="#2C2F38" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 제목 텍스트 -->
        <TextBlock Text="Family Parameter 삭제"
           FontSize="20"
           FontWeight="Bold"
           Margin="10" Grid.ColumnSpan="3" Foreground="White"/>

        <!-- 설명 텍스트 -->
        <TextBlock Text="배치된 패밀리에 대한 작업"
           FontSize="12"
           Foreground="White"
           VerticalAlignment="Center"
           Margin="10,10,10,10"
           Grid.Row="1"
           Grid.ColumnSpan="3"/>

        <!-- 기준선 -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" 
            Margin="10,40,10,0" 
            BorderBrush="White" 
            BorderThickness="0,0,0,1"/>


        <!-- 패밀리 목록 ListBox -->
        <ListBox x:Name="lstFiles" SelectionMode="Extended" ScrollViewer.VerticalScrollBarVisibility="Auto"
         Grid.Row="2" Grid.ColumnSpan="3" Margin="10"
         Background="#3B3F48" Foreground="White" BorderBrush="#5A5D66" BorderThickness="1">
        </ListBox>

        <!-- 기준선 -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                Margin="10,40,10,0" 
                BorderBrush="White" 
                BorderThickness="0,0,0,1"/>

        <!-- 진행바 -->
        <ProgressBar x:Name="progressBar"
             Grid.Row="3" Grid.ColumnSpan="3"
             Height="20" 
             Margin="10,10,10,10"
             Foreground="#FFF99D5D"
             Background="#3B3F48"
             Minimum="0" Maximum="100"
             Visibility="Collapsed"/>

        <!-- 파라미터 지정 -->
        <TextBlock Text="PARAMETER :"
                   FontSize="14"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="10,10,10,10"
                   Grid.Row="4"
                   Grid.Column="0"/>

        <!-- 파라미터 지정 -->
        <TextBox Name="txtParameterName" Height="25" Margin="10,10,10,10" 
                 Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                 Background="#3B3F48" Foreground="White" BorderBrush="#5A5D66" BorderThickness="3"/>

        <!-- 기준선 -->
        <Border Grid.Row="4" Grid.ColumnSpan="3" 
                Margin="10,40,10,0" 
                BorderBrush="White" 
                BorderThickness="0,0,0,1"/>

        <!-- 전체선택 버튼 -->
        <Button x:Name="btnSelectAll"
                Content="전체 선택"
                Click="btnSelectAll_Click"
                Width="80"
                Grid.Row="5"
                Grid.Column="0"
                Margin="10"
                Background="#1E2A35"
                Foreground="White"
                FontWeight="Bold"
                Height="25"/>

        <!-- 삭제 버튼 -->
        <Button x:Name="btnDelete" Content="삭제" Click="btnDelete_Click" 
                Width="80" Grid.Row="5" Grid.Column="2" Margin="10,10,10,10"        
                Background="#FFF99D5D" Foreground="White" 
                FontWeight="Bold" Height="25" HorizontalAlignment="Left"/>


    </Grid>
</UserControl>
